<%= form_for @refund do |f| %>

  <% if @refund.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@refund.errors.count, "error") %> prohibited
        this refund from being saved:
      </h2>
      <ul>
        <% @refund.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :valor %><br>
    <%= f.text_field :value %>
  </p>

  <p>
    <%= f.label :descrição %><br>
    <%= f.text_area :description %>
  </p>

  <div class="field">
    <%= f.label :foto %><br>
    <%= f.file_field :photo %>
  </div>

  <div class="field">
    <%= f.label :status %><br>
    <%= f.check_box :status %>
    <p> Aprovado? </p>
  </div>

  <div class="field">
    <%= f.label :quantidade_moedas %><br>
    <%= f.text_field :quantidade_moedas %>
  </div>

  <p>
    <%= f.submit %>
  </p>

<% end %>
